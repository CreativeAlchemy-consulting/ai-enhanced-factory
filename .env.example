# AI-Enhanced Development & Deployment Factory
# Environment Configuration Template

# ==========================================
# NOTION API CONFIGURATION
# ==========================================

# Notion Integration API Key
# Get this from: https://www.notion.so/my-integrations
NOTION_API_KEY=ntn_your_api_key_here

# Database IDs (32-character hexadecimal strings)
# Format: 144d74ca5c5e815ca77fffdcff0e01d7

# Core Databases
MASTER_TASKS_DB_ID=your_master_tasks_database_id_here
PIPELINE_PROJECTS_DB_ID=your_pipeline_projects_database_id_here
CLIENTS_DB_ID=your_clients_database_id_here

# Extended Databases
DEAL_PIPELINE_DB_ID=your_deal_pipeline_database_id_here
ACTIVITIES_DB_ID=your_activities_database_id_here
AUTOMATION_COMPONENTS_DB_ID=your_automation_components_database_id_here
DEPLOYMENT_RECORDS_DB_ID=your_deployment_records_database_id_here

# ==========================================
# CLAUDE FRAMEWORK CONFIGURATION
# ==========================================

# Web Dashboard Configuration
CLAUDE_FRAMEWORK_PORT=3000
ENABLE_DASHBOARD=true
DASHBOARD_AUTO_REFRESH=30

# Logging Configuration
LOG_LEVEL=info
LOG_PATH=./logs
ENABLE_CONSOLE_LOGGING=true

# Confidence Gate Configuration
UNCERTAINTY_DETECTION=true
MAX_RETRIES=3
RETRY_DELAY=1000

# ==========================================
# MCP SERVER CONFIGURATION
# ==========================================

# Filesystem Paths (comma-separated)
# Update these paths to match your system
FILESYSTEM_PATHS="C:/Users/YourName/Desktop,E:/Downloads,E:/Documents/Consulting"

# Docker Configuration
DOCKER_MCP_PORT=8811
DOCKER_SOCKET_PATH=/var/run/docker.sock

# ==========================================
# ANSIBLE CONFIGURATION
# ==========================================

# Environment Selection
ANSIBLE_ENVIRONMENT=development
# Options: development, staging, production

# Workspace Configuration
WORKSPACE_NAME=creative_alchemy_dev
# Options: creative_alchemy_dev, creative_alchemy_prod, ai_factory_prod

# Deployment Configuration
FORCE_UPDATE=false
BACKUP_ENABLED=true
DEPLOYMENT_REPORTS=true

# ==========================================
# VERIFICATION FRAMEWORK
# ==========================================

# Testing Configuration
RUN_VERIFICATION_ON_START=true
VERIFICATION_TIMEOUT=300
TEST_REPORT_FORMAT=json

# Error Handling
CONTINUE_ON_ERROR=false
VALIDATION_STRICT_MODE=true

# ==========================================
# SECURITY CONFIGURATION
# ==========================================

# API Rate Limiting
API_RATE_LIMIT=60
API_TIMEOUT=30000

# Access Control
CLIENT_PORTAL_ENABLED=true
VISIBILITY_FILTERING=true

# ==========================================
# MONITORING AND OBSERVABILITY
# ==========================================

# Metrics Collection
METRICS_ENABLED=true
PERFORMANCE_TRACKING=true
ERROR_ANALYTICS=true

# Dashboard Features
REAL_TIME_UPDATES=true
LOG_SEARCH_ENABLED=true
STATISTICS_DISPLAY=true

# ==========================================
# DEVELOPMENT CONFIGURATION
# ==========================================

# Debug Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false
STACK_TRACES=true

# Development Tools
HOT_RELOAD=true
AUTO_RESTART=true
DEV_MIDDLEWARE=true

# ==========================================
# BACKUP AND RECOVERY
# ==========================================

# Backup Configuration
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESSION=true

# Recovery Settings
AUTO_RECOVERY=true
ROLLBACK_ENABLED=true
RECOVERY_TIMEOUT=60

# ==========================================
# INTEGRATION SETTINGS
# ==========================================

# GitHub Integration
GITHUB_TOKEN=your_github_token_here
GITHUB_REPO=CreativeAlchemy-consulting/ai-enhanced-factory

# CI/CD Configuration
AUTO_DEPLOY=false
DEPLOY_BRANCH=main
DEPLOY_ON_MERGE=true

# ==========================================
# ADVANCED CONFIGURATION
# ==========================================

# Performance Tuning
MAX_CONCURRENT_OPERATIONS=5
MEMORY_LIMIT=512MB
CPU_LIMIT=1

# Feature Flags
EXPERIMENTAL_FEATURES=false
BETA_DASHBOARD=false
ADVANCED_ANALYTICS=false

# Custom Paths
TEMPLATES_PATH=./templates
REPORTS_PATH=./reports
CACHE_PATH=./cache